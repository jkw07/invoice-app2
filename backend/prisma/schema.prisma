generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  password_hash String
  createdAt     DateTime @default(now())
  invoices      Invoice[]
}

model Invoice {
  id        String  @id @default(uuid())
  userId    String
  amount    Float
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

